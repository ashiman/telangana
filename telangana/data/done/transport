    (key==9) || (key==13) || (key==27) )
   return true;
else if ((("0123456789").indexOf(keychar) > -1))
   return true;
   
else if (dec && (keychar == "."))
   {
   MyField.form.elements[dec].focus();
   return false;
   }
else
   return false;
}
